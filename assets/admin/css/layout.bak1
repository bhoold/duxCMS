	}
	#left-menu {
		width: 200px;
		padding: 30px 0;
		border-bottom: 1px solid #dedede;
		border-right: 1px solid #dedede;
		background: #F0F0F0;
		.item {
			padding: 8px 0;
			padding-left: 30px;
			&:hover {
				cursor: pointer;
				color: @color-headerBrandText;
				background: @color-headerBackground;
			}
		}
	}
	#main {
		flex: 1;
		padding: 30px;
	}
}
